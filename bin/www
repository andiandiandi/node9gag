#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('nodebeginner:server');
var https = require('https');

var fs = require('fs');
var options = {
key: fs.readFileSync('./pkeys/key.pem'),
cert: fs.readFileSync('./pkeys/cert.pem')
};
/**
 * Get port from environment and store in Express.
 */
var port_http = normalizePort('3000');
var port_https = normalizePort(process.env.PORT || '3001');
app.set('port', port_https);

/**
 * Create HTTP server.
 */

var server = https.createServer(options,app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port_https);
server.on('error', onError);
server.on('listening', onListening);

var http = require('http');
http.createServer(function (req, res) {
      var host = req.headers['host'];
      // replace the port in the host
      host = host.replace(/:\d+$/, ":"+app.get('port'));
      // determine the redirect destination
      var destination = ['https://', host, req.url].join('');
      res.writeHead(302, {
          'Location': destination
      });
      res.end();
}).listen(port_http);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
